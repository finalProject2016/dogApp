<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tombushmits.dogapp.UserScreen"
    android:background="@drawable/bones"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/regular_white"
        android:elevation="20dp"
        android:text="Large Text"
        android:textSize="50dp"
        android:id="@+id/Dog_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/dogPic"
        android:layout_below="@+id/Dog_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="3dp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS"
        android:id="@+id/toggleButton"
        android:checked="false"
        android:textOn="GPS ON"
        android:textOff="GPS OFF"
        android:clickable="true"
        android:elevation="6dp"
        android:layout_alignBottom="@+id/profile_imagebutton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/treatment_imagebutton"
        android:src="@drawable/main_treatment_icon"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/food_imagebutton"
        android:src="@drawable/main_food_icon"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/toggleButton" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/walk_imagebutton"
        android:src="@drawable/main_walk_icon"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/food_imagebutton"
        android:layout_alignEnd="@+id/dogPic" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/profile_imagebutton"
        android:scaleType="fitCenter"

        android:src="@drawable/main_profile_icon"
        android:alpha="10"
        android:layout_alignTop="@+id/logout_button"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/logout_button"
        android:scaleType="fitCenter"

        android:src="@drawable/main_exit_icon"
        android:layout_above="@+id/walk_imagebutton"
        android:layout_alignEnd="@+id/walk_imagebutton" />
</RelativeLayout>
