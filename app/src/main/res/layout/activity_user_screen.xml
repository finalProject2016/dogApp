<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tombushmits.dogapp.UserScreen"
    android:background="@drawable/dog_background"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textSize="50dp"
        android:id="@+id/Dog_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/dogPic"
        android:layout_below="@+id/Dog_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="3dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Treatments"
        android:id="@+id/goToTreatments"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="57dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Foods"
        android:id="@+id/goToFood"
        android:layout_alignTop="@+id/goToTreatments"
        android:layout_alignRight="@+id/Dog_name"
        android:layout_alignEnd="@+id/Dog_name" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS"
        android:id="@+id/toggleButton"
        android:checked="false"
        android:textOn="GPS ON"
        android:textOff="GPS OFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:elevation="6dp" />
</RelativeLayout>
